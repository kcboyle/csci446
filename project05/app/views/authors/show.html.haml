-content_for :subtitle do
  .general_subtitle= "...he who shall be named"

-content_for :nav do
  %ul
    %li.show_nav_bar
      = link_to authors_path, title: "list all authors" do 
        =image_tag("arrow_left.png") 
        list all authors
    %li.show_nav_bar
      = link_to edit_author_path(@author), title: "Edit Author" do
        =image_tag("page_edit.png")
        Edit
    %li.show_nav_bar
      =link_to @author, confirm: 'Are you sure?', method: :delete, title: "Delete Author" do
        =(image_tag("delete.png"))
        Delete Author
%p
  #notice
  = notice

%h2
  = @author.name
  %p.before_content_padding
  = image_tag @author.photo.url

%h3.before_content_padding
  Articles created by #{@author.name}
- @author.articles.each do |p|
  %li= link_to p.title, p, title: "View article"
%br

