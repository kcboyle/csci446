=form_for @author, :html => { :multipart => true } do |f|
  -if @author.errors.any?
    #error_explanation
      %h2
        =pluralize(@author.errors.count, "error")
        prohibited this author from being saved:

      %ul
        -@author.errors.full_messages.each do |msg|
          %li= msg

  .before_content_padding
    %p=f.label :name
    =f.text_field :name

    %p=f.file_field :photo  
  .actions.before_content_padding
    =f.submit
