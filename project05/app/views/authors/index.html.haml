-content_for :subtitle do 
  .general_subtitle= "...and he who made the article shall be named"

-content_for :nav do
  %table.home_page_header_padding
    %tr
      %td
        %h2 Listing Authors
      %td
        =link_to new_author_path, title: "Create an Author" do
          =image_tag("add.png")
          New Author
      %td
        =link_to articles_path, title: "List All Articles" do
          =image_tag("rosette.png")
          All Articles

-if notice
  %p{ :id => notice }
  =notice


%table.table_align
  %tr
    %th Name
    %th
    %th
    %th

  -@authors.each do |author|
    %tr
      %td= author.name
      %td= link_to image_tag("zoom.png"), author, title: 'View Author'
      %td= link_to image_tag("page_edit.png"), edit_author_path(author), title: 'Edit Author Details'
      %td= link_to (tooltip (image_tag("delete.png")), { :tooltip => 'Delete Author' }, :class => 'mytooltip'), author, confirm: 'Are you sure?', method: :delete

%br
